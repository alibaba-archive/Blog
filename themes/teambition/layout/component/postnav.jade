mixin postnav(next,prev)
  .postnav.clearfix
    .postnav-inner
      .prev
        if prev
          a(href="/#{prev.path}")
            span=__('prev_post')
            div=prev.title
      .home: a(href="/"): i.icon-home
      .next
        if next
          a(href="/#{next.path}")
            span=__('next_post')
            div=next.title
